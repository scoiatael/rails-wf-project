%header.navigation
  .navigation-wrapper
    = link_to root_path do
      %i.fa.fa-film.fa-3x.logo WF
    - if user_signed_in?
      %a#js-mobile-menu.navigation-menu-button{:href => ""} MENU
      .nav
        %ul#navigation-menu
          %li.nav-link
            = link_to "Vote", votes_path, class: "top-menu-bar"
          %li.nav-link
            = link_to "Events", events_path, class: "top-menu-bar"
          %li.nav-link
            = link_to "Movies", movies_path, class: "top-menu-bar"
          %li.nav-link
            = link_to "Invite", invite_path, class: 'top-menu-bar'
          - if current_user.try :admin?
            %li.nav-link
              = link_to 'Admin', admin_path, class: "top-menu-bar"


    .navigation-tools
      - unless user_signed_in?
        = link_to 'Sign Up', new_user_registration_path, class: 'sign-up'
        = link_to 'Sign In', new_user_session_path, class: 'sign-up'
      - if user_signed_in?
        = link_to 'My Account', edit_user_registration_path, class: 'sign-up'
        = link_to 'Logout', destroy_user_session_path, { class: 'sign-up', method: :delete }

