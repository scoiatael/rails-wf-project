%header.navigation
  .navigation-wrapper
    %a.logo{:href => "/"}
      %h1 Wieczorki Filmowe
    %a#js-mobile-menu.navigation-menu-button{:href => ""} MENU
    .nav
      %ul#navigation-menu
        - if user_signed_in?
          %li.nav-link
            %a{:href => "/vote"} Vote
            %a{:href => "/events"} Events
            %a{:href => "/movies"} Movies
        - if current_user.try :admin?
          %li.nav-link
            = link_to 'Admin', admin_path


    .navigation-tools
      - unless user_signed_in?
        = link_to 'Sign Up', new_user_registration_path, class: 'sign-up'
        = link_to 'Sign In', new_user_session_path, class: 'sign-up'
      - if user_signed_in?
        = link_to 'My Account', edit_user_registration_path, class: 'sign-up'
        = link_to 'Logout', destroy_user_session_path, { class: 'sign-up', method: :delete }

