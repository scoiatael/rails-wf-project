%h1 Listing users
%table
  %thead
    %tr
      %th Email
      %th Name
      %th Approved By
      %th{:colspan => "2"}
  %tbody
    - User.find_each do |user|
      %tr
        %td= user.email
        %td= user.name
        - if user.user.nil?
          %td= link_to("Approve", user_path(user), method: :put, data: { confirm: "Are you sure? Approving #{user.email}" })
        -else
          %td= user.user.name || user.user.email
        %td= link_to 'Show', user_path(user)
        %td= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: "Are you sure? Deleting #{user.email}" }
