= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  .field.flex
    = f.label :date
    = ": "
    = f.date_select :date
  = f.fields_for :vote do |ff|
    = ff.fields_for :vote_options do |fff|
      #vote-options
      .field.flex#blank-vote-option
        %button.block.small#add-vote-option +
        = fff.label :movie
        = fff.collection_select :movie_id, Movie.all, :id, :name, include_blank: true
  .actions
    = f.submit
