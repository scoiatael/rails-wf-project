= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .field
    = f.label :movie_id
    %br/
    = f.text_field :movie_id
  .actions
    = f.submit
