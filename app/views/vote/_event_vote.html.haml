%p
  on:
  =event.date
  %table
    %tr
      %th Poster
      %th Name
      %th Size
      %th{colspan: 2} Vote
    - for vote_option in event.vote_options
      %tr
        %td
          %img.small-avatar{id: "movie_poster_#{vote_option.movie.imdb_id}"}
          %span#movie_id.hidden= vote_option.movie.imdb_id
        %td= vote_option.movie.name
        %td= vote_option.votes_for.up.size - vote_option.votes_for.down.size
        %td
          = link_to '+', "/vote/#{vote_option.id}", method: :post, data: { confirm: "Are you sure?\nUpvoting #{vote_option.id}" }
          - for voter in vote_option.votes_for.up.voters.take 4
            = voter.id
        %td
          = link_to '-', "/vote/#{vote_option.id}", method: :delete, data: { confirm: "Are you sure?\nDownvoting #{vote_option.id}" }
          - for voter in vote_option.votes_for.down.voters.take 4
            = voter.id
